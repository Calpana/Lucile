<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<VersionPrefix>1.0.0</VersionPrefix>
		<Description>Core primitives for the Lucile Framework. For detailed Documentation visit http://www.github.com/codeworxOS/Lucile</Description>
		<Copyright>copyright © codeworx gmbh 2017</Copyright>
		<AssemblyTitle>Lucile Framework Primitives Library</AssemblyTitle>
		<Authors>codeworx GmbH</Authors>
		<TargetFramework>netstandard1.0</TargetFramework>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<AssemblyName>Lucile.Primitives</AssemblyName>
		<PackageId>Lucile.Primitives</PackageId>
		<NetStandardImplicitPackageVersion>1.6.1</NetStandardImplicitPackageVersion>
		<PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
		<CodeAnalysisRuleSet>..\..\global\Stylecop.ruleset</CodeAnalysisRuleSet>
		<RootNamespace>Lucile</RootNamespace>
	</PropertyGroup>

	<PropertyGroup Condition="'$(SignAssembly)'=='True'">
		<DefineConstants>SIGN</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\..\global\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="..\..\global\stylecop.json" Link="stylecop.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta001">
			<PrivateAssets>All</PrivateAssets>
		</PackageReference>
		<PackageReference Include="System.Dynamic.Runtime" Version="4.3.0" />
		<PackageReference Include="System.Runtime.Serialization.Primitives" Version="4.3.0" />
		<PackageReference Include="System.Collections.Immutable" Version="1.4.0" />
		<PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
		<PackageReference Include="System.Linq.Queryable" Version="4.3.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.0" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Configuration\Linq\" />
	</ItemGroup>

</Project>
